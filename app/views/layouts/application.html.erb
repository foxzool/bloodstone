<!doctype html>  

<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%= Settings.title %></title>
  <meta name="description" content="<%= Settings.description%>">
  <meta name="author" content="<%= Settings.author%>">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <%= stylesheet_link_tag 'style' %>
  <%= javascript_include_tag 'libs/modernizr-1.6.min' %>
  <%= csrf_meta_tag %>

</head>

<body>

  <div id="container">
      


	  <header><!-- header -->
		  <h1><%= link_to Settings.title, root_path%></h1>
		  <h2><%= Settings.header %></h2>
	  </header><!-- end of header -->
    <nav><!-- top nav -->
		<div class="menu">
			<%= render_navigation %>
		</div>
	</nav><!-- end of top nav -->
  
    
<section id="main"><!-- #main content and sidebar area -->
      <div id="flash">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
      <div id="content">
        <%= yield %>
      </div>

      <aside>
      <section>
      <h3><%= t('Categories') %></h3>
      <%= render 'shared/categories'%>
      </section>

      <section>
      <h3><%= t('Dashboard') %></h3>
      <% if current_user %>
        <%= link_to rest_i18n('New', 'post'), new_post_path %> | <%= link_to rest_i18n('Listing', 'post'), posts_path %><br/>
        <%= link_to rest_i18n('New', 'category'), new_category_path %> | <%= link_to rest_i18n('Listing', 'category'), categories_path %><br/>
        <%= link_to t('Sign out'), destroy_user_session_path %>
      <% else %>
        <%=  link_to t('Sign in'), new_user_session_path %><br/>
        <%=  link_to t('Sign up'), new_user_registration_path %>
      <% end %>

      </section>

      <section>
      <h3><%= t('Recent Articles') %></h3>
      <%= render "shared/last_posts" %>
      </section>

      </aside>

      </section><!-- end of #main content and sidebar-->
    
    <footer>

    </footer>
  </div> <!-- end of #container -->


  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="js/libs/jquery-1.4.4.js"%3E%3C/script%3E'))</script>
  
  
  <!-- scripts concatenated and minified via ant build script-->
  <%= javascript_include_tag 'plugins' %>
  <%= javascript_include_tag 'script.js' %>
  <!-- end concatenated and minified scripts-->
  
  
  <!--[if lt IE 7 ]>
    <%= javascript_include_tag 'libs/dd_belatedpng' %>
    <script> DD_belatedPNG.fix('img, .png_bg'); </script>
  <![endif]-->

  <!-- yui profiler and profileviewer - remove for production -->
  <%- unless Rails.env.production? %>
  <%= javascript_include_tag 'profiling/yahoo-profiling.min' %>
  <%= javascript_include_tag 'profiling/config' %>
  <%- end %>
  <!-- end profiling code -->


  <!-- change the UA-XXXXX-X to be your site's ID -->
  <script>
   var _gaq = [['_setAccount', '<%= Settings.google_analytics %>'], ['_trackPageview']];
   (function(d, t) {
    var g = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
    g.async = true;
    g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g, s);
   })(document, 'script');
  </script>
  
</body>
</html>
