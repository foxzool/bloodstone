h1 = rest_i18n("Listing", "category")

table
  tr
    th = t("activerecord.attributes.category.name")
    th = t("activerecord.attributes.category.slug")
    th
    th
    th

  - @categories.each do |category|
    tr
      td= category.name
      td= category.slug
      td= link_to t('Show'), category
      - if can? :manage, @category
        td= link_to t('Edit'), edit_category_path(category)
        td= link_to t('Destroy'), category, :confirm => t('Are you sure?'), :method => :delete

br
- if can? :new, @category
  = link_to t("New %{resource}", :resource => t("activerecord.models.category")), new_category_path
